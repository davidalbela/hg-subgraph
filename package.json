{
  "name": "hg-subgraph",
  "private": true,
  "version": "0.1.0",
  "author": "Gnosis (https://gnosis.pm)",
  "description": "A subgraph for Gnosis Markets",
  "license": "LGPL-3.0",
  "scripts": {
    "create": "graph create Gnosis/GnosisMarkets --node https://api.thegraph.com/deploy/",
    "create-local": "graph create Gnosis/GnosisMarkets --node http://localhost:8020",
    "codegen": "graph codegen --output-dir src/types/",
    "build": "graph build",
    "deploy": "graph deploy Gnosis/GnosisMarkets --ipfs https://api.thegraph.com/ipfs/ --node https://api.thegraph.com/deploy/",
    "deploy-local": "graph deploy Gnosis/GnosisMarkets --ipfs http://localhost:5001 --node http://localhost:8020",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down -v",
    "docker:logs": "docker-compose logs --follow",
    "docker:build": "docker-compose build",
    "refresh-abi": "node ops/abiGenerator.js",
    "migrate": "cd node_modules/@gnosis.pm/conditional-tokens-contracts && truffle migrate --network=local --reset",
    "test": "npm run codegen && npm run deploy-local && mocha --exit",
    "create-deploy-local": "npm run create-local && npm run deploy-local",
    "create-test-pipeline": "npm run docker:down && npm run docker:up && wait-on tcp:8545 && npm run migrate && wait-on http-get://localhost:8000/subgraphs/name/Gnosis/GnosisMarkets/graphql && npm run create-local"
  },
  "devDependencies": {
    "@gnosis.pm/conditional-tokens-contracts": "^1.0.1",
    "@graphprotocol/graph-cli": "^0.18.0",
    "@graphprotocol/graph-ts": "^0.18.1",
    "@truffle/contract": "^4.2.5",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "axios": "^0.19.2",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "delay": "^4.3.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "fs-extra": "^9.0.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.4",
    "mocha": "^7.1.2",
    "openzeppelin-solidity": "^3.0.1",
    "prettier": "^2.0.5",
    "truffle": "^5.1.26",
    "wait-on": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
